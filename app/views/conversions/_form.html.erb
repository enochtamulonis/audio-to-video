<%= form_with model: conversion do |f| %>
  <div class="flex flex-col gap-4">
    <% conversion.errors.each do |error| %>
      <span class="text-sm text-red-500"> <%= error %> 
    <% end %>
    <div>
      <%= f.label :image %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div>
      <%= f.label :audio %>
      <%= f.file_field :audio, accept: "audio/*" %>
    </div>
    <%= f.submit "Convert", class: "bg-blue-500 px-3 py-2 rounded-lg text-indigo-100 w-32 cursor-pointer" %>
  </div>
<% end %>